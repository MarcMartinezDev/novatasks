---
const { summary, answer } = Astro.props as {
  summary: string;
  answer: string;
};
---

<div class="border-gray-100 w-full">
  <details
    class="group p-4 bg-white rounded-xl shadow border border-gray-200 transition-all hover:shadow-md hover:bg-gray-50 select-none"
  >
    <summary
      class="flex justify-between items-center cursor-pointer text-gray-800 group-open:text-blue-900"
    >
      {summary}
      <span class="ml-2 transition-transform group-open:rotate-180">
        <svg
          class="w-5 h-5 text-gray-400 group-open:text-blue-900"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19 9l-7 7-7-7"></path>
        </svg>
      </span>
    </summary>
    <div class="mt-4 leading-relaxed">
      {answer}
    </div>
  </details>
</div>
