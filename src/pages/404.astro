---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section
    class="bg-white min-h-svh flex flex-col justify-center items-center px-6 gap-8 text-center"
  >
    <div class="max-w-md">
      <div class="text-indigo-600 text-9xl font-extrabold animate-pulse mb-4">
        404
      </div>

      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Oops! Page not found.
      </h2>

      <p class="text-gray-600 py-10">
        The page you’re looking for doesn’t exist or was moved. Let’s get you
        back on track.
      </p>

      <a
        href="/"
        class="inline-block bg-indigo-600 text-white text-sm font-semibold rounded-full px-6 py-3 shadow hover:bg-indigo-700 transition-all"
      >
        ← Back to Home
      </a>
    </div>
  </section>
</Layout>
